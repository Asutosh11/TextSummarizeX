<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    android:gravity="center">

       <ScrollView
           android:fillViewport="true"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:weightSum="9"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:weightSum="8"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="8"
                   android:gravity="center_vertical"
                   android:orientation="vertical">

                   <FrameLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:layout_margin="20dp"
                       android:layout_weight="2"
                       android:background="@drawable/border_edittext"
                       android:orientation="vertical">

                       <EditText
                           android:id="@+id/et_enter_url"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="40dp"
                           android:background="#fff"
                           android:gravity="top|left"
                           android:hint="Enter a webpage URL to summarize"
                           android:inputType="textMultiLine"
                           android:padding="10dp"
                           android:scrollbars="vertical"
                           android:textSize="16sp" />

                       <Button
                           android:layout_gravity="bottom"
                           android:id="@+id/btn_submit_url"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:background="#F1F1F1"
                           android:drawableEnd="@drawable/ic_language_black_18dp"
                           android:drawableTint="#00BCD4"
                           android:paddingLeft="20dp"
                           android:paddingRight="20dp"
                           android:text="Summarize Webpage"
                           android:textColor="@color/btn_color_first_fragment" />

                   </FrameLayout>

                   <FrameLayout
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_margin="20dp"
                       android:layout_weight="6"
                       android:background="@drawable/border_edittext"
                       android:orientation="vertical">

                       <EditText
                           android:id="@+id/et_enter_text"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="40dp"
                           android:background="#fff"
                           android:gravity="top|left"
                           android:hint="Enter some text to summarize"
                           android:inputType="textMultiLine"
                           android:padding="10dp"
                           android:scrollbars="vertical"
                           android:textSize="16sp" />

                       <Button
                           android:layout_gravity="bottom"
                           android:id="@+id/btn_submit_text"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:background="#F1F1F1"
                           android:drawableEnd="@drawable/ic_spellcheck_black_18dp"
                           android:drawableTint="#FF5722"
                           android:paddingLeft="20dp"
                           android:paddingRight="20dp"
                           android:text="Summarize Text"
                           android:textColor="@color/btn_color_first_fragment" />

                   </FrameLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1">

                   <Button
                       android:id="@+id/btn_choose_doc"
                       android:layout_width="match_parent"
                       android:layout_height="45dp"
                       android:layout_margin="20dp"
                       android:background="@drawable/border_edittext"
                       android:drawableEnd="@drawable/ic_attach_file_black_18dp"
                       android:drawableTint="#4CAF50"
                       android:paddingLeft="20dp"
                       android:paddingRight="20dp"
                       android:text="Choose a Document to Summarize"
                       android:textColor="@color/btn_color_first_fragment" />
               </LinearLayout>

           </LinearLayout>

       </ScrollView>


</FrameLayout>
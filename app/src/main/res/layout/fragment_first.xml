<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/border_edittext"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:background="#fff"
                android:gravity="top|left"
                android:hint="Enter a webpage URL to summarize"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#F1F1F1"
                android:drawableRight="@drawable/ic_language_black_18dp"
                android:drawableTint="#00BCD4"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Summarize Webpage"
                android:textColor="#4A4A4A" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="6"
            android:background="@drawable/border_edittext"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:background="#fff"
                android:gravity="top|left"
                android:hint="Enter some text to summarize"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#F1F1F1"
                android:drawableRight="@drawable/ic_spellcheck_black_18dp"
                android:drawableTint="#FF5722"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Summarize Text"
                android:textColor="#4A4A4A" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:background="@drawable/border_edittext"
            android:drawableRight="@drawable/ic_attach_file_black_18dp"
            android:drawableTint="#4CAF50"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Choose a Document to Summarize"
            android:textColor="#4A4A4A" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>